#!/bin/bash
chmod 755 LibGradesTable.cs
chmod 755 LibGradesCli.cs
chmod 755 GradeCalc.cs
csc /target:library /out:LibGradesTable.dll LibGradesTable.cs
if [ $? -eq 0 ]; then
    csc /target:library /out:LibGradesCli.dll LibGradesCli.cs /reference:LibGradesTable.dll
    if [ $? -eq 0 ]; then
        csc GradeCalc.cs -win32icon:calc.ico /reference:LibGradesCli.dll
        if [ $? -eq 0 ]; then
            read -n1 -r -p "Press any key to continue..." key
            mono GradeCalc.exe
        fi
    fi
fi

